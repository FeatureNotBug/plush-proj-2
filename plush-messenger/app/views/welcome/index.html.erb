<div class="row">
  <div class="spacer"></div>
  <div class="container text-center jumbotron">
    <h1>Project Plushie</h1>
    <% if user_signed_in? %>
        <%= link_to "New Conversation", new_message_path, class: "btn btn-info btn-lg" %>
        <%= link_to "Go To Inbox", conversations_path, class: "btn btn-primary btn-lg" %>
    <% else %>
        <p>A place where plush makers and buyers can meet and compare prices, making for more efficient searches</p>
        <%= link_to "Login", new_user_session_path, class: "btn btn-primary btn-lg" %>
        <%= link_to "Sign up", new_user_registration_path, class: "btn btn-success btn-lg" %>
    <% end %>
  </div>
</div>

